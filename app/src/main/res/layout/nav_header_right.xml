<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@color/colorPrimary"
    android:paddingTop="@dimen/toppadding_to_fit_statusbar"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:orientation="vertical">

    <com.example.zhouzhihui.audioshift.ui.CoolRecyclerView
        android:id="@+id/right_drawer_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="70dp"
        app:dividerHeight="8dp"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="bottom">
        <RadioGroup
            android:id="@+id/main_radiogroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/main_radiobutton_weixing"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="normal"
                android:buttonTint="@android:color/holo_blue_bright"
                android:gravity="center"
                android:checked="true"/>
            <RadioButton
                android:id="@+id/main_radiobutton_contacts"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="baby"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:buttonTint="@android:color/holo_blue_bright"
                android:gravity="center"/>
            <RadioButton
                android:id="@+id/main_radiobutton_find"
                android:buttonTint="@android:color/holo_blue_bright"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="aged"
                android:gravity="center"/>
        </RadioGroup>
        <TextView
            android:id="@+id/open_file_directory"
            android:layout_width="wrap_content"
            android:layout_gravity="bottom|left"
            android:textColor="@android:color/white"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:paddingRight="70dp"
            android:paddingLeft="20dp"
            android:paddingBottom="10dp"
            android:text="打开文件目录"/>

        <TextView
            android:id="@+id/refresh_file_directory"
            android:layout_width="70dp"
            android:layout_gravity="bottom|right"
            android:textColor="@android:color/white"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:paddingBottom="10dp"
            android:text="刷新"/>
    </FrameLayout>

</FrameLayout>