<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    android:layout_width="match_parent"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    app:contentPaddingLeft="10dp"
                                    app:contentPaddingRight="10dp"
                                    app:contentPaddingTop="5dp"
                                    app:contentPaddingBottom="5dp"
                                    android:clickable="true"
                                    app:cardElevation="10dp"
                                    android:layout_height="wrap_content"
                                    android:foreground="@drawable/fg_horde"
                                    android:orientation="vertical">
    <android.support.v7.widget.AppCompatImageView
        android:layout_width="@dimen/file_icon_width"
        android:layout_height="@dimen/file_icon_width"
        android:layout_gravity="center_vertical"
        app:srcCompat="@drawable/icon"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/file_icon_width"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_file_name"
            android:textSize="16sp"
            android:textStyle="bold"
            android:shadowColor="#ff000000"
            android:shadowDx="5"
            android:shadowDy="5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_file_size"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:textColor="@color/btn_login_bg_disable_color"
                android:paddingRight="5dp"
                android:layout_height="wrap_content"/>
            <View
                android:layout_width="1dp"
                android:layout_height="10dp"
                android:background="@color/btn_login_bg_disable_color"/>
            <TextView
                android:id="@+id/tv_file_time"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:paddingLeft="5dp"
                android:textColor="@color/btn_login_bg_disable_color"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>